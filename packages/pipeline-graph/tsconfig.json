{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "outDir": "./dist/lib",
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": true,
        "baseUrl": "src/main",
        "rootDir": "src/main"      
    },
    "include": [
        "src/main/**/*.ts",
        "src/main/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}